#include <iostream>
#include <conio.h>

using namespace std;

int main() {
    const int filas = 5;
    const int columnas = 5;
    
    int matriz[filas][columnas];
    
    for (int i = 0; i < filas; i++) {
        for (int j = 0; j < columnas; j++) {
            cout << "Ingrese el numero para la posicion " << i + 1 << "," << j + 1 << ": ";
            cin >> matriz[i][j];
        }
    }
    
    int maxSuma = 0;
    int filaMaxSuma = 0;
    
    for (int i = 0; i < filas; i++) {
        int sumaFila = 0;
        for (int j = 0; j < columnas; j++) {
            sumaFila += matriz[i][j];
        }
        if (sumaFila > maxSuma) {
            maxSuma = sumaFila;
            filaMaxSuma = i;
        }
    }
    
    cout << "Imprimiendo la matriz:" << endl;
    for (int i = 0; i < filas; i++) {
        for (int j = 0; j < columnas; j++) {
            cout << matriz[i][j] << " ";
        }
        cout << endl;
    }
    
    cout << "La fila " << filaMaxSuma + 1 << " tiene la suma maxima de " << maxSuma << endl;
    
    int numCeros = 0; 
    int numPositivos = 0;
    int numNegativos = 0;
    
    for (int i = 0; i < filas; i++) {
        for (int j = 0; j < columnas; j++) {
            if (matriz[i][j] == 0) {
                numCeros++; 
            }
            else if (matriz[i][j] > 0) {
                numPositivos++;
            }
            else {
                numNegativos++;
            }
        }
    }
    
    cout << "Cantidad de numeros cero: " << numCeros << endl; 
    cout << "Cantidad de numeros positivos: " << numPositivos << endl;
    cout << "Cantidad de numeros negativos: " << numNegativos << endl;
    
    return 0;
}
